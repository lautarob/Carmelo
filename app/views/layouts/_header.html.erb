<header class="header">
  <nav class="header__navbar">
    <div class="header__logo">
      <%= link_to image_tag("logo.png", alt: "Carmelo"), root_path %>
    </div>
    <ul class="header__nav">
      <li class="header__item">
        <%= link_to "¿Cómo Funciona?", root_path, class: "header__link" %>
      </li>
      <li class="header__item">
        <%= link_to "Preguntas Frecuentes", root_path, class: "header__link" %>
      </li>
      <% if current_user %>
      <li class="header__item header__item--profile">
        <div class="header__profile-picture">
          <%= image_tag("profile.png", alt: "Profile picture") %>
        </div>
        <div class="header__profile-links">
          <div><%= current_user.first_name %></div>
          <%= link_to "Perfil del usuario", edit_user_registration_path %>
        </div>
      </li>
      <% else %>
      <li class="header__item header__item--login">
        <%= link_to "Iniciar Sesión", login_path, class: "header__link header__link--login" %>
      </li>
      <% end %>
    </ul>
  </nav>
</header>
